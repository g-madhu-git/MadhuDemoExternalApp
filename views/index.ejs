
<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <!-- Include the Salesforce Canvas SDK -->
        <!--script src="https://platform.salesforce.com/canvas/sdk/3.0/canvas.js"></script-->
    </head>
    <body>
        <h1>Welcome, <%= title %></h1>
        <button id="publishButton">Publish Event to Salesforce</button>

        <script>
            // Ensure that the SDK has been loaded before initializing CanvasApp
            if (typeof force !== 'undefined' && force.CanvasApp) {
                // Initialize Salesforce Canvas SDK
                var canvasApp = new force.CanvasApp();

                // Subscribe to an event (replace 'eventName' with your actual event)
                canvasApp.subscribe('eventName', function(message) {
                    console.log('Received message from Salesforce:', message);
                });

                // Publish an event to Salesforce when the button is clicked
                document.getElementById('publishButton').addEventListener('click', function() {
                    canvasApp.publish('eventName', { message: 'Hello from external app!' });
                });
            } else {
                console.error("Canvas SDK is not loaded.");
            }
        </script>
    </body>
</html>


